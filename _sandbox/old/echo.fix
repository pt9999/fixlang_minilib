module Main;

import Minilib.Common.IOEx;

echo : () -> IOFail ();
echo = |_| (
    write_string(stdout, "Echo ver 0.00\n");;
    loop_m ((), |_|
        write_string(stdout, ">> ");;
        fflush(stdout);;
        let line = *read_line(IO::stdin);
        if (line == "") {
            break_m $ ()
        };
        write_string (IO::stdout, line);;
        continue_m $ ()
    )
);

main : IO ();
main = (
    do {
        echo()
    }.try(exit_with_msg(1))
);
