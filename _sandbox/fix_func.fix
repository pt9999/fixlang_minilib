fib_m_inner : (I64 -> IO I64) -> I64 -> IO I64;
fib_m_inner = |loop| |n| (
    if n == 0 {
        pure $ 0
    } else if n == 1 {
        pure $ 1
    } else {
        println("n="+ n.to_string);;
        pure $ *loop(n-1) + *loop(n-2)
    }
);

main : IO ();
main = (
    let fib_m = fix_func(fib_m_inner);
    let ans = *fib_m(5);

    println $ ans.to_string
);
