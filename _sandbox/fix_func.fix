module Main;

fix_func: ((a -> b) -> a -> b) -> a -> b;
fix_func = |f| |x| f(fix_func(f), x);

//fix_func2: ((a -> b) -> a -> b) -> a -> b;
//fix_func2 = |f| (|x| f(x(x)))(|x| f(x(x)));

fib_inner : (I64 -> I64) -> I64 -> I64;
fib_inner = |loop| |n| (
    if n == 0 {
        0
    } else if n == 1 {
        1
    } else {
        loop(n-1) + loop(n-2)
    }
);

main1 : IO ();
main1 = (
    let fib = fix_func(fib_inner);
    let ans = fib(30);

    print $ ans.to_string
);

