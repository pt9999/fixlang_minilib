test_iterator_sequence_a: TestCase;
test_iterator_sequence_a = (
    make_test("test_iterator_sequence_a") $ |_|
    let iter: Iterator (Option I64) = [some(1),some(2),some(3)].to_iter;
    let opt: Option (Iterator I64) = iter.sequence_a;
    assert_equal("eq", some $ [1, 2, 3], opt.map(to_array));;
    let iter: Iterator (Option I64) = [some(1),none(),some(3)].to_iter;
    let opt: Option (Iterator I64) = iter.sequence_a;
    assert_equal("eq", none(), opt.map(to_array));;
    pure()
);

test_iterator_sequence: TestCase;
test_iterator_sequence = (
