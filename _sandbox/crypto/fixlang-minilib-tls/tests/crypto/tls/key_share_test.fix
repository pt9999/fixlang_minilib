test_key_share_server_hello: TestCase;
test_key_share_server_hello = (
    make_test("test_key_share_server_hello") $ |_|
    let kse = KeyShareEntry::make(
        NamedGroup::secp256r1, [ 0x01_U8, 0x02_U8, 0x03_U8 ]
