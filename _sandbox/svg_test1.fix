figure1: XmlElement;
figure1 = (
    let fill = Svg::fill;
    let group1 = group
        .stroke("red").stroke_width(5)
        .fill("transparent")
        .add(rect(10, 10, 30, 30))
        .add(circle(200, 200, 20))
        .add(
            path(
                newpath
                .moveto(25, 25)
                .curveto(75, 25, 100, 50, 100, 100)
                .scurveto(125.0, 175.0, 175.0, 175.0)
                .lineto(200, 200)
            ).stroke("black")
        )
        .add(
            Svg::text("Hello あいう")
            .xy(110, 120)
            .font_size(20)
            .font_family("SansSerif")
            .stroke("transparent")
            .fill("black")
        )
        ;
    Svg::svg(500, 500).view_box(0, 0, 300, 300).add(group1)
