fix_m_func: [m: Monad] (m a -> m a) -> m a;
fix_m_func = |f| (
    let g // : (() -> m a) -> () -> m a
      = |h, _| f(h());
    fix(g, ())
);

test1 : IO I64 -> IO I64;
test1 = |ma| (
    let n = *ma;
    println(n.to_string);;
    pure $ n + 1
);

main2: IO ();
main2 = (
    let io = fix_m_func(test1);
    // infinite loop, stack overflow
    let n = *io;
    pure()
);

