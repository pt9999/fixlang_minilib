test_modular_power: IO ();
test_modular_power = (
    println("----------- test_modular_power -----------");;
    let m = 17;
    let a = 3;
    let a = Modular::make(a, m);
    let one = Modular::make(1, m);
    let x = *Iterator::range(0, m).fold_m(
        one, |i, x|
        println((a, i, x, m).format("{}^{} = {} (mod {})"));;
        pure $ x * a
    );
    pure()
);

